<%- include('./base/header.ejs') %>
<style>
    .button1 {
        width: 80px; /* Adjust the width as needed */
        margin-right: 100%;
    }
</style>
<table class="table text-center" >
    <thead>
        <tr>
            <th>BookTitle</th>
            <th>Publisher</th>
            <th>Price</th>
            <th>Language</th>
            <th>Edition</th>
            <th>No Of Pages</th>
            <th>ISBN</th>
            <th>Country</th>
            <th style="padding-left: 7%;" >Actions</th>

        </tr>
    </thead>
    <% books.forEach((book)=>{ %>
        <tr>
            <td><%= book.bookTitle %></td>
            <td><%= book.publisher %></td>
            <td><%= book.price %></td>
            <td><%= book.language %></td>
            <td><%= book.edition %></td>
            <td><%= book.noOfPages %></td>
            <td><%= book.isbn %></td> 
            <td><%= book.country %></td>
            <td><a href="#" class="btn btn-warning button1">edit</a></td>
            <td><a href="/book/delete/<%= book._id %>" class="btn btn-danger button1">Delete</a></td>
        </tr>
   <% }) %>
</table>

