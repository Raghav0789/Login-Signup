<%- include('./base/header.ejs') %>
<style>
    .button1 {
        width: 80px; /* Adjust the width as needed */
        margin-right: 100%;
    }
</style>
<%- include('./base/sideBar.ejs') %>
<table style="position: fixed; margin-left: 18.5%; width: 80%; font-size: smaller; top: 56px;" class="table table-striped text-center">
    <thead class="thead-dark">
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Mobile No</th>
            <th>Password</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach((user) => { %>
            <tr>
                <td><%= user.email %></td>
                <td><%= user.FirstName %></td>
                <td><%= user.LastName %></td>
                <td><%= user.MobileNo %></td>
                <td><%= user.PassWord %></td>
                <td><%= user.lastLogin %></td>
                <td class="actions-cell">
                    <a href="/edit/user/page/<%= user._id %>" class="btn btn-warning">Edit</a>
                    <a href="/delete/user/page/<%= user._id %>" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<%- include('./base/footer.ejs')%>